<div class="row">
  <div class="col s12 m4">
    <%= form_tag dashboard_profile_update_path, class: 'update-profile-form', remote: true do %>
        <div class="row">
          <div class="input-field col s12">
            <%= text_field_tag :name, current_user.name, class: 'validate', required: true%>
            <label for="name">Full Name</label>
          </div>

          <div class="input-field col s12">
            <%= text_field_tag :username, current_user.username, class: 'validate', required: true%>
            <label for="username">Username</label>
          </div>

          <div class="input-field col s12">
            <%= email_field_tag :email, current_user.email, class: 'validate', required: true%>
            <label for="email">Email</label>
          </div>

          <div class="input-field col s12">
            <%= text_field_tag :avatar_url, current_user.avatar_url, class: 'validate', required: true%>
            <label for="avatar_url">Avatar Address</label>
          </div>

          <div class="input-field col s4">
            <img class="profile-image" src="<%= current_user.avatar_url %>">
          </div>
        </div>
        <button class="waves-effect waves-light btn right">Save</button>
  <% end %>
  </div>
</div>