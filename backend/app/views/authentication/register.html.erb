<div class="row authentication">
  <div class="col s12 m4 offset-m4">
    <h3 class="center-align">Register App</h3>

    <%= form_tag authentication_register_post_path, remote: true do %>
        <div class="row">
          <div class="input-field col s12">
            <%= text_field_tag :name, @name, class: 'validate', required: true%>
            <label for="name">Full Name</label>
          </div>

          <div class="input-field col s12">
            <%= text_field_tag :username, @username, class: 'validate', required: true%>
            <label for="username">Username</label>
          </div>

          <div class="input-field col s12">
            <%= email_field_tag :email, @email, class: 'validate', required: true%>
            <label for="email">Email</label>
          </div>

          <div class="input-field col s12">
            <%= password_field_tag :password, nil, class: 'validate', required: true%>
            <label for="password">Password</label>
          </div>

          <div class="input-field col s12">
            <%= password_field_tag :password_repeat, nil, class: 'validate', required: true%>
            <label for="password">Repeat Password</label>
          </div>
        </div>
        <%= link_to 'Login', authentication_login_path %>
        <button class="waves-effect waves-light btn right">Register</button>
    <% end %>
  </div>
</div>